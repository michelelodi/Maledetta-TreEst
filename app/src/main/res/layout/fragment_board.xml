<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".BoardFragment">

    <TextView
        android:id="@+id/lnameBoardFragmentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/snameBoardFragmentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/didBoardFragmentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/boardButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".BoardFragment">

        <Button
            android:id="@+id/backToHomeB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_home_button"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
        android:id="@+id/revertB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/revert_button"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/addPostB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_post_button"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>